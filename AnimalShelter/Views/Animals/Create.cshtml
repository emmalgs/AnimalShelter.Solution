@{
    Layout = "_Layout";
}
@using AnimalShelter.Models

@model AnimalShelter.Models.Animal

<h1>Add an animal</h1>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    <br>

    @Html.LabelFor(model => model.Type)
    @Html.DropDownListFor(model => model.Type, 
                new SelectList(Enum.GetValues(typeof(AnimalType))),
                "Select Type")

    <br>

    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)

    <br>
    @Html.LabelFor(model => model.Date)
    @Html.TextBoxFor(model => model.Date, new { type = "date"})
    <br>

    <input type="submit" value="Add new animal~! :-)" />
}