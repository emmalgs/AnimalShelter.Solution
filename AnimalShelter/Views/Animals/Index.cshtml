@{
    Layout = "_Layout";
}



@using AnimalShelter.Models; 

<h1>Animals!!</h1>

@if (@Model.Count == 0)
{
    <p>There are no animals!! :(</p>
}

@foreach (Animal animal in Model) 
{
    <li>@Html.ActionLink($"{animal.Name}", "Details", new { id = animal.AnimalId}), @animal.Breed </li>
    @* <li>@animal.Type  @animal.Breed  @animal.Name  Admitted: @animal.Date </li> *@
}

<p>@Html.ActionLink("Add an animal!", "Create")</p>

